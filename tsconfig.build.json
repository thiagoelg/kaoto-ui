{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "src/@kaoto",
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "typeRoots": [
      "./src/@kaoto/**"
    ],
    "umdNamedDefine": true
  },
  "include": ["./src/@kaoto", "./src/index.tsx"],
  "exclude": [
    ".storybook",
    ".yarn",
    "coverage",
    "cypress",
    "dist",
    "nginx",
    "node_modules",
    "public",
    "**/*.stories.tsx",
    "**/*.test.ts*"
  ]
}
